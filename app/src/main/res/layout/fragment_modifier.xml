<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="56dp"
    tools:context=".ui.vins.VinsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ajouter_un_vin"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextNom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="Nom du vin"
                android:hint="@string/nom"
                android:inputType="text"
                android:background="@drawable/back"
                android:paddingHorizontal="15dp"/>

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/back"
                android:paddingHorizontal="15dp" />

            <EditText
                android:id="@+id/editTextRegion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="Région du vin"
                android:hint="@string/r_gion"
                android:inputType="text"
                android:background="@drawable/back"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/editTextAnnee"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="Année du vin"
                android:hint="@string/ann_e"
                android:inputType="text"
                android:background="@drawable/back"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/editTextZone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="Zone de rangement du vin"
                android:hint="@string/zone"
                android:inputType="text"
                android:background="@drawable/back"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/editTextQuantite"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="Quantité de ce vin"
                android:hint="@string/quantit"
                android:inputType="text"
                android:background="@drawable/back"
                android:paddingHorizontal="15dp"/>

            <Button
                android:id="@+id/buttonAjouter"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                android:text="@string/ajouter"
                android:background="@drawable/back"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>